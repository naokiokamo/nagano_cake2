<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3><%= @customer.last_name %> <%= @customer.first_name %>さんの注文履歴</h3>

      <table class="table table-borderless">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_order_path(order.id) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></td>
          <td>
            <% @sum = 0 %>
            <% order.order_details.each do |detail| %>
              <% @sum +=  detail.amount %>
            <% end %>
            <%= @sum %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>