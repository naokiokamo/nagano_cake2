<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>ジャンル一覧・追加</h3>

        <div class="new-genre">
          <%= form_with model:@new_genre, url:admin_genres_path, local:true do |f| %>
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :"ジャンル名" %></td>
              <td><%= f.text_field :name %></td>
              <td><button class="btn btn-success" type="submit">新規登録</button></td>
            </tr>
          <% end %>
          </table>
        </div>

        <div class="genres-box">
          <table class="table">
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </table>
        </div>

    </div>
  </div>
</div>