<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>ジャンル編集</h3>

      <%= form_with model:@edit_genre, url:admin_genre_path, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><%= f.label :"ジャンル名" %></td>
          <td><%= f.text_field :name %></td>
          <td><button class="btn btn-success" type="submit">変更を保存</button></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>