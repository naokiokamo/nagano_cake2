<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <div><h3>商品詳細</h3></div></br>
      <div class="item-show">

        <div class="item-image">
          <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>
        </div>

        <div class="item-detail">

          <table>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格（税抜価格）</td>
              <td><%= @item.with_tax_price %>（<%= @item.price %>）円</td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @item.is_active_i18n %></td>
            </tr>
            <tr>
              <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
            </tr>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>