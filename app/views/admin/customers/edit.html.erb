<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
        <tr>
          <td><%= f.label :"氏名" %></td>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td><%= f.text_field :first_name, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :"フリガナ" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :"電話番号" %></td>
          <td><%= f.text_field :telephone_number, autofocus: true %></td>
        </tr>
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :"会員ステータス" %></td>
          <td>
            <%= f.radio_button :is_active, :yuko %><%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :taikai %><%= f.label :is_active, "退会" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>