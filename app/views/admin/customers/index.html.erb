<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>会員一覧</h3>

      <table class="table">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active == true %>
              <font color=#00FF00><%= "有効" %></font>
            <% else  %>
              <font color="gray"><%= "退会" %></font>
            <% end  %>
          </td>
        </tr>
        <% end %>
      </table>
       <%= paginate @customers %>
    </div>
  </div>
</div>