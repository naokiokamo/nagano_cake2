<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
   <th><center><h3>新規登録画面</h3></center></th>
  <tr>
    <td><%= f.label :"名前" %></td>
    <td>（姓）<%= f.text_field :last_name, autofocus: true %></td>
    <td>（名）<%= f.text_field :first_name, autofocus: true %></td>
  </tr>
  <tr>
    <td><%= f.label :"フリガナ" %></td>
    <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true %></td>
    <td>（メイ)<%= f.text_field :first_name_kana, autofocus: true %></td>
  </tr>
  <tr>
    <td><%= f.label :"メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
    <td><%= f.text_field :postal_code, autofocus: true %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"住所" %></td>
    <td><%= f.text_field :address, autofocus: true %></td>
    <td></td>
  </tr>
  <tr><div class="field">
    <td><%= f.label :"電話番号" %></td>
    <td><%= f.text_field :telephone_number, autofocus: true %></td>
    <td></td>
  </div></tr>
  </tr>
</table>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  
  <table class="table table-borderless">
  <th><h3>既に登録済みの方</h3></th>
  <tr>
    <td><%= link_to "こちら", new_customer_session_path %>からログインしてください。</td>
  </tr>
</table>
<% end %>

<%= render "public/shared/links" %>
