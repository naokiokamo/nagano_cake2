<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>配送先編集</h3>

        <%= form_with model: @edit_address, url: address_path(@edit_address), local:true do |f| %>
          <table class="table table-borderless">
            <%= f.hidden_field :customer_id, :value => @customer.id %>
            <tr>
              <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :"住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :"宛名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <%= f.submit "編集内容を保存する"%>
          </table>
        <% end %>
    </div>
  </div>
</div>