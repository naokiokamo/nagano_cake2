<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>配送先登録/一覧</h3>

      <%= form_with model: @new_address, url: '/addresses', local:true do |f| %>
      <table class="table table-borderless">
      <%= f.hidden_field :customer_id, :value => @customer.id %>
        <tr>
          <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :"宛名" %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "新規登録",class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>

      <table class="table" border="1">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to '削除', address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>