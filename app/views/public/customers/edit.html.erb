<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h2>会員情報編集</h2>
      <%= form_with model: @customer, url: customers_my_page_path, method: :patch, local: true do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :"氏名" %></td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号" %></td>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号" %></td>
            <td><%= f.text_field :telephone_number, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td><button class="btn btn-success" type="submit">変更を保存</button></td>
            <td><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>