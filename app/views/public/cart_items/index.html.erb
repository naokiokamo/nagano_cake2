<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <td>ショッピングカート</td>
        <td align="right">
          <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
        </td>
      </table>

      <table class="table" border="1">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
          </tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%= form_with model:cart_item, url:cart_item_path(cart_item), local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <button class="btn btn-success" type="submit">変更</button>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %><% @sum += cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </table>

      <table class="table table-borderless">
        <tr>
          <td><%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %></td>
          <td align="right">合計金額：<%= @sum %></td>
        </tr>
      </table>

      <table class="table table-borderless">
        <tr>
          <center>
            <% if current_customer.cart_items.exists? %>
              <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
            <% end %>
          </center>
        </tr>
      </table>
    </div>
  </div>
</div>