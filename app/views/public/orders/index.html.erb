<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3>注文履歴一覧</h3>
        <table class="orderindex-table" border="1">
          <tr>
            <th>注文日</th>
            <th>発送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>

        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>〒<%= order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |detail| %>
                <%= detail.item.name %></br>
              <% end %>
            </td>
            <td><%= order.total_payment %></td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>